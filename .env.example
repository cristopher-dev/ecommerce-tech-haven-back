# Server Configuration
NODE_ENV=development
PORT=3000
APP_PORT=3000

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASSWORD=password
DATABASE_NAME=tech-haven_db
DATABASE_LOGGING=false

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=24h

# Payment Service Configuration
# Using Mock service for development, use TechHavenPaymentServiceImpl for real integration
PAYMENT_SERVICE_TYPE=mock

# Fee Configuration
BASE_FEE=50.00
DELIVERY_FEE=100.00

# TechHavenPay Payment Gateway (Optional - only for production)
# TECHHAVENPAY_PUBLIC_KEY=
# TECHHAVENPAY_PRIVATE_KEY=
# TECHHAVENPAY_API_URL=https://api.techhavenpay.io/v1

# Docker Configuration
POSTGRES_DB=tech-haven_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
PGADMIN_EMAIL=admin@tech-haven.com
PGADMIN_PASSWORD=admin

# Swagger Documentation
SWAGGER_ENABLED=true
SWAGGER_PATH=api/docs

# Security (CORS, Helmet, etc)
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Logging
LOG_LEVEL=debug
