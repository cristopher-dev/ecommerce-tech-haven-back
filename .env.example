# Server Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASSWORD=password
DATABASE_NAME=tech-haven_db
DATABASE_LOGGING=false

# Payment Service Configuration
# Using Mock service for development, use TechHavenPaymentServiceImpl for real Wompi integration
PAYMENT_SERVICE_TYPE=mock

# Wompi Payment Gateway (Optional - only for production)
# WOMPI_PUBLIC_KEY=
# WOMPI_PRIVATE_KEY=
# WOMPI_API_URL=https://api.wompi.co/v1

# Swagger Documentation
SWAGGER_ENABLED=true
SWAGGER_PATH=api/docs

# Security (CORS, Helmet, etc)
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Logging
LOG_LEVEL=debug
